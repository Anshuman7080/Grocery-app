generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String     @unique
  role      Role       @default(USER)
  address   Address?
  password  String
  orders    Order[]
  cartItems CartItem[]
}

type Address {
  name         String
  email        String
  phone        String
  zip          String
  addressBlock String
}

model Category {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  name   String  @unique
  image  String
  items  Item[]
}

model Item {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  price      Float
  stock      Int
  image      String
  category   Category     @relation(fields: [categoryId], references: [id])
  categoryId String       @db.ObjectId
  orders     OrderItem[]
  cartItems  CartItem[]
}

model CartItem {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  user     User     @relation(fields: [userId], references: [id])
  userId   String   @db.ObjectId
  item     Item     @relation(fields: [itemId], references: [id])
  itemId   String   @db.ObjectId
  quantity Int      @default(1)
  price    Float
  addedAt  DateTime @default(now())
}

model Order {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  user      User         @relation(fields: [userId], references: [id])
  userId    String       @db.ObjectId
  items     OrderItem[]
  total     Float
  status    String
  paymentId  String
  createdAt DateTime     @default(now())
}

model OrderItem {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  order    Order    @relation(fields: [orderId], references: [id])
  orderId  String   @db.ObjectId
  item     Item     @relation(fields: [itemId], references: [id])
  itemId   String   @db.ObjectId
  quantity Int
}

model Slider {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  image  String
}
